{
  "name": "commit-reminder",
  "displayName": "Commit Reminder",
  "description": "Reminds you to commit after a large number of uncommitted changes",
  "publisher": "asea-aranion",
  "repository": {
	"type": "git",
	"url": "https://github.com/asea-aranion/commit-reminder"
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-reminder.countChanges",
        "title": "Count Changes"
      },
      {
        "command": "commit-reminder.autoCheckChanges",
        "title": "Start Auto Change Checking"
      },
      {
        "command": "commit-reminder.changeGlobalDefaultThreshold",
        "title": "Change Global Default Threshold"
      },
      {
        "command": "commit-reminder.changeWorkspaceThreshold",
        "title": "Change Workspace Threshold"
      },
      {
        "command": "commit-reminder.muteReminders",
        "title": "Mute Commit Reminders"
      }
    ],
    "keybindings": [
      {
        "command": "commit-reminder.autoCheckChanges",
        "mac": "cmd+alt+=",
        "win": "ctrl+alt+=",
        "linux": "ctrl+alt+="
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "dependencies": {
    "diffparser": "^2.0.1"
  }
}
